{
    "task": "PRETRAINING",
    "loss_averaging_basis": "pertoken",
    "accuracy_averaging_basis": "pertoken",
    "use_prepacked_pretraining_dataset": true,
    "max_sequences_per_pack": 3,
    "avg_seq_per_pack": 2,
    "num_layers": 3,
    "encoder_start_pipeline_stage": 1,
    "att_ffn_placement": [[1, [2, 1]], [0, [1, 2]]],
    "hidden_size": 128,
    "attention_heads": 4,
    "sequence_length": 512,
    "mask_tokens": 76,
    "vocab_length": 30912,
    "popart_dtype": "FLOAT16",
    "lamb_m_dtype": "FLOAT32",
    "no_dropout": false,
    "no_attn_dropout": true,
    "dropout_prob": 0.1,
    "stochastic_rounding": true,
    "enable_half_partials": true,
    "batches_per_step":  1,
    "epochs": 1,
    "epochs_per_save": 1,
    "floating_point_exceptions": true,
    "projection_bias" : true,
    "steps_per_save": 3000,
    "steps_per_log": 1,
    "aggregate_metrics_over_steps": 1,
    "loss_scaling": 1,
    "batch_size": 2,
    "gradient_accumulation_factor": 12,
    "replication_factor": 2,
    "split_qkv": true,
    "split_linear_layers": false,
    "shuffle": true,
    "duplication_factor": 10,
    "epochs_to_cache": 1,
    "embedding_serialization_vocab_steps": 4,
    "available_memory_proportion": [1],
    "checkpoint_dir": "checkpoints/mk2/pretrain_mini",
    "no_validation": true,
    "optimizer_state_offchip": true, 
    "gradient_reduction_type": "Mean",
    "optimizer": "LAMB_NO_BIAS",
    "beta1_schedule": {"init": 0.88, "final": 0.5, "num_transition_steps": 400},
    "beta2": 0.99,
    "weight_decay": 1e-2,
    "enable_tensorboard": true,
    "lr_bert_schedule": {"init_lr": 2e-2, "num_training_steps": 400, "num_warmup_steps": 2},
    "input_files": ["data/jan2020_three_seq_per_pack_with_duplications/strategy*"],
    "on_the_spot_validation_files": ["data/jan2020_packed_eval_10k/strategy*"],
    "engine_cache": "engine_cache/mini",
    "max_training_sequences": 1500000,
    "replicated_tensor_sharding": true
    }
